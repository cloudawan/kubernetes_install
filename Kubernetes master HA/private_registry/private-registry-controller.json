{
    "kind": "ReplicationController",
    "apiVersion": "v1",
    "metadata": {
        "name": "private-registry",
        "labels": {
            "name": "private-registry"
        }
    },
    "spec": {
        "replicas": 1,
        "selector": {"name": "private-registry"},
        "template": {
            "metadata": {
                "labels": {
                    "name": "private-registry"
                }
            },
            "spec": {
                "volumes": [
                    {
                        "name": "certificate",
                        "hostPath": {
                            "path": "/srv/kubernetes"
                        }
                    }
                ],
                "containers": [
                    {
                        "name": "private-registry",
                        "image": "registry:2",
                        "ports": [
                            {
                                "name": "https", 
                                "containerPort": 5000
                            }
                        ],
                        "env": [
                            {
                                "name": "REGISTRY_HTTP_TLS_CERTIFICATE",
                                "value": "/certs/private_registry_cert.pem"
                            },
                            {
                                "name": "REGISTRY_HTTP_TLS_KEY",
                                "value": "/certs/private_registry_key.pem"
                            }
                        ],
                        "volumeMounts": [
                            {
                                "name": "certificate",
                                "readOnly": true,
                                "mountPath": "/certs"
                            }
                        ]
                    }
                ]
            }
        }
    }
}
